17ª QUESTÃO
programa{
	
	funcao inicio(){
		cadeia nome[56] caracter sexo[56] inteiro quant_mulheres = 0, quant_homens = 0 

		

		para(inteiro x = 0; x < 56; x++){
			escreva("qual seu nome?: ") leia(nome[x])
			escreva("Informe o ", " sexo [F|M]: ") leia(sexo[x])

               limpa()

			se(sexo[x] == 'F' ou sexo[x] == 'f'){
				quant_mulheres ++}
			senao{
				quant_homens ++}}

				limpa()

				escreva("Quantidade de sexo masculino: ", quant_homens)
				escreva("\nQuantidade de sexo feminino: ", quant_mulheres)
			
}

}
		
18ª QUESTÃO
programa{
	
	funcao inicio(){
		inteiro ano_carro = 0, carro_2000 = 0, total_de_carros = 0
		real por_des = 0.0, valor_do_carro = 0.0, valor_do_des = 0.0, valor_pago = 0.0, des = 0.0, ar
		cadeia res = "s"

		enquanto (res == "s"){ 
			escreva("Digite o ano do carro: ")leia(ano_carro)
			escreva("Digite o valor do carro: ")leia(valor_do_carro)

			limpa()

		     se(ano_carro <= 2000) {
		        por_des = 0.12
		        carro_2000 = carro_2000 + 1} 
		     senao {
		        por_des = 0.07}

		      total_de_carros =  total_de_carros + 1
		      des = valor_do_carro * por_des

		      escreva("Desconto: ", des, "\n")
		      escreva("Valor com desconto:", valor_do_carro - des, "\n")

		      escreva("Deseja continuar: |S|N|: ")leia(res)
		       se(res == "s"){
		        limpa()}
		       senao{
		       	limpa()}
		       }
		        
		      escreva("Total de carros: ", total_de_carros, "\n")
		      escreva("Total de carros com ano até 2000: ", carro_2000, "\n")
		      		
	}
}

19ª QUESTÃO
programa{
	
	funcao inicio(){
		
		cadeia nome, sexo, saude, res = "s"
		inteiro idade, apto=0, n_apto=0
		enquanto (res == "s"){
			
			limpa()
			
			escreva("nome: ")leia(nome)
	    		escreva("idade: ")leia(idade)
	    		escreva("sexo | F | M |: ")leia(sexo)
	    		escreva("como esta sua saude | B | M | ")leia(saude)

	    		limpa()
	    		
		    escreva("Nome: ", nome, "\n")
		    escreva("Idade: ", idade, "\n")
		    escreva("Sexo: ", sexo, "\n")
		    escreva("saude: ", saude, "\n")
		    
		    se (sexo == "m" e idade >=18 e saude == "b") {
		        escreva("Esta apto para comprir o alistamento \n")
		        apto = apto + 1}
		        
		        senao {
		        escreva("Não esta apto para comprir o alistamento \n")
		        n_apto =n_apto + 1}
		        
		    escreva("Deseja continuar: | S | N | :")leia(res)
		    se(res==res){
		    	limpa()}
		    senao{
		    	limpa()}
			
		    escreva("total de pessoas aptas: ",apto,"\n")
		    escreva("total de pessoas não aptas: ", n_apto,"\n")
  }
 }
}

20ª QUESTÃO 

	Programa{
	funcao inicio(){

	  real custo[40], venda[40]
	  real media_vendas=0.0, media_custo=0.0
	 

	  para(inteiro x = 0; x < 40; x++){

	    escreva("preço de custo do produto: ")leia(custo[x])
	    escreva("preço de venda do produto: ")leia(venda[x])

	  limpa()

	   se(custo[x]==venda[x]){
	  	 escreva("empate\n")}

	   senao se(venda[x]>custo[x]){
	   	 escreva("lucro\n")}
	   senao{
	  	 escreva("prejuizo\n")}

	  	
	   media_custo= media_custo+custo[x]
	   media_vendas= media_vendas+venda[x] }

	   limpa()

	  escreva("\nmedia de custo: ",media_custo/40)
	  escreva("media de vendas: ", media_vendas/40)
	  
	}
}		


		

	
		
			
