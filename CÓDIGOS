2ª QUESTÃO
programa
{
	
	funcao inicio()
	{
		cadeia nome
		escreva("Digite seu nome:")
		leia(nome)

		real salario
		escreva("Digite seu salário fixo: \n")
		leia(salario)

		inteiro vendas
		escreva("\nDigite as vendas realizadas: ")
		leia(vendas)

		escreva("Seu salário é de: R$" , Ex7(salario,vendas)) }
	
	funcao real Ex7(real salario, inteiro vendas)
	{
		escreva(salario+vendas*0.15)

		retorne (salario+vendas*0.15)
	}
}

