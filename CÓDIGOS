		real por_distribuidor, por_imposto
		
		  escreva("valor de fabricação é: ") leia(valor_fabrica)
		
		  por_imposto=(valor_fabrica*45)/100
		  valor_intermediario=(por_imposto+valor_fabrica)
		  por_distribuidor=(valor_intermediario*28)/100
		  valor_final=(valor_intermediario+por_distribuidor) 
		
		limpa()

		  escreva("valor de fabrica: ", valor_fabrica, "\n", "valor do consumidor ", valor_final)}
		
		
		
	}
	
