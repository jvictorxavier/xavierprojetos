14ª QUESTÃO
programa{
	  inclua biblioteca Matematica-->mat 
	    funcao inicio(){
	    cadeia nome real recuperacao, media, n1, n2, n3, ar
	
	      escreva(" qual o nome do aluno: ") leia(nome)
	      escreva(" primeira nota: ") leia(n1)
	      escreva(" segunda nota: ") leia(n2)
	      escreva(" terceira nota: ") leia(n3)

	      media=(n1+n2+n3)/3
	    limpa()
	
           ar = mat.arredondar(media,2)
	      escreva("nome:", nome, "\n","media:", +ar, "\n")
	        se(ar>=7){
		     escreva("aprovado")}
	        senao se(ar>=5.1 e ar<=6.9){
		     escreva("recuperação")}
	        senao{
		     escreva("reprovado")}
		
 }
		
}
	
